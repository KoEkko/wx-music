.hot-menu {
    display: inline-block;
    width: 100%;
}

.top {
    position: relative;
}

.top .image {
    width: 100%;
    border-radius: 12rpx;
    background-size: cover;
}

.top .play {
    position: absolute;
    bottom: 10rpx;
    right: 0;
    color:#fff;
    font-size: 22rpx;
    border-radius: 12rpx;
    padding: 6rpx 10rpx;
    background: rgba(0, 0, 0, .5);
}

.bottom {
    width: 100%;
    font-size: 26rpx;
    height:70rpx;
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}